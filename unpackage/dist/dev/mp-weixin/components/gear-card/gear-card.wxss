.gearCard {
  width: 90%;
  display: flex;
  position: relative;
  height: 220rpx;
  background-color: #2c3e4e;
  border-radius: 20rpx;
  margin: 14rpx 0;
  padding: 5rpx;
}
.gear-left {
  flex: 1;
  height: 180rpx;
  margin: 10rpx;
}
.gear-left .img {
  width: 160rpx;
  height: 100%;
}
.gear-right {
  margin: 10rpx;
  width: 540rpx;
  /*    display: flex;
  align-items: center;
  flex-direction: column; */
}
.gear-right .geartime {
  font-size: 22rpx;
  border-radius: 10rpx;
  background-color: #6E8192;
  padding: 6rpx;
}
.gear-right .gearDetails {
  display: flex;
  margin: 20rpx 0;
}
.gear-right .gearDetails .img {
  width: 50rpx;
  background-color: white;
  border-radius: 10rpx;
}
.gear-right .gearDetails .gearName {
  margin-left: 20rpx;
}
.gearCss .img {
  background-color: black;
  border-radius: 50%;
}
.gearPower {
  display: flex;
}
.gearPower .primaryGearPower {
  width: 70rpx;
  height: 70rpx;
}
.gearPower .primaryGearPower .img {
  width: 70rpx;
  height: 100%;
}
.gearPower .additionalGearPowers {
  display: flex;
  margin: 8rpx 4rpx;
}
.gearPower .additionalGearPowers .img {
  margin: 3rpx 0rpx 0rpx 4rpx;
  width: 50rpx;
  height: 50rpx;
}
.gearPrice {
  position: absolute;
  right: -20rpx;
  bottom: 20rpx;
  width: 240rpx;
  -webkit-transform: rotate(-2deg);
          transform: rotate(-2deg);
  background: #1B1B1B;
  padding: 0rpx 5rpx;
}
.gearPrice .img {
  margin: 0px 20rpx -10rpx 10rpx;
  width: 45rpx;
  height: 45rpx;
}

